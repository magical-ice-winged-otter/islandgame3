script ISLANDGAME_VERDANT_WOODS_SPOOKY_HOUSE_Spook3 {
    lock
    delay(32)
    applymovement(OBJ_EVENT_ID_PLAYER, moves(emote_question_mark))
    playse(SE_M_NIGHTMARE)
    applymovement(LOCALID_SPOOK_HOUSE_ITEM, moves(slide_up, delay_16 * 3, walk_right * 8))
    waitmovement
    removeobject(LOCALID_SPOOK_HOUSE_ITEM)
    setobjecthidden(LOCALID_SPOOK_HOUSE_ITEM)
    release
}

