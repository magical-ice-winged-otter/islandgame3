mapscripts ISLANDGAME_VERDANT_WOODS_SPOOKY_HOUSE_MapScripts {
    MAP_SCRIPT_ON_TRANSITION {
        if(!flag(FLAG_VERDANT_WOODS_MIMIKYU_DEFEATED) && var(VAR_SPOOKY_HOUSE_STATE) < 4) {
            setvar(VAR_SPOOKY_HOUSE_STATE, 0)
        }

        if (var(VAR_SPOOKY_HOUSE_STATE) > 3) {
            removeobject(LOCALID_SPOOK_HOUSE_TWIN1)
            removeobject(LOCALID_SPOOK_HOUSE_TWIN2)
            removeobject(LOCALID_SPOOK_HOUSE_ITEM)
        }
    }
}

script ISLANDGAME_VERDANT_WOODS_SPOOKY_HOUSE_GetOut {
    lock
    playmoncry(SPECIES_MIMIKYU, CRY_MODE_NORMAL)
    waitmoncry
    setvar(VAR_SPOOKY_HOUSE_STATE, 1)
    msgbox(format("LeAVe mY HoUSE nOW NoW nOW NOw NOW grAWUghhH"), MSGBOX_AUTOCLOSE)
    release
}

movement spookyApproach {
    walk_down * 5
}

movement spookySpin {
    face_left delay_2 face_up delay_2 face_right delay_2 face_down delay_2
	face_left delay_2 face_up delay_2 face_right delay_2 face_down delay_2
	face_left delay_2 face_up delay_2 face_right delay_2 face_down delay_2
	face_left delay_2 face_up delay_2 face_right delay_2 face_down delay_2
	face_left delay_2 face_up delay_2 face_right delay_2 face_down delay_2
	face_left delay_2 face_up delay_2 
    face_player
}

movement spookyTP {
    face_up
	disable_anim
	slide_up
	slide_up
	slide_up
	slide_up
	slide_up
	slide_up
}

script ISLANDGAME_VERDANT_WOODS_SPOOKY_HOUSE_Spook1 {
    lock
    playse(SE_M_NIGHTMARE)
    waitse
    applymovement(OBJ_EVENT_ID_PLAYER, moves(emote_question_mark))
    waitmovement
    addobject(LOCALID_SPOOK_HOUSE_TWIN1)
    setobjectxy(LOCALID_SPOOK_HOUSE_TWIN1, 4, 8)
    addobject(LOCALID_SPOOK_HOUSE_TWIN2)
    setobjectxy(LOCALID_SPOOK_HOUSE_TWIN2, 5, 8)
    applymovement(LOCALID_SPOOK_HOUSE_TWIN1, spookyApproach)
    applymovement(LOCALID_SPOOK_HOUSE_TWIN2, spookyApproach)
    waitmovement

    msgbox(format(
        "Leave this place...\p"
        "While you still can..."
    ))

    fadescreen(FADE_TO_BLACK)
    playse(SE_M_NIGHTMARE)
    removeobject(LOCALID_SPOOK_HOUSE_TWIN1)
    removeobject(LOCALID_SPOOK_HOUSE_TWIN2)
    setobjecthidden(LOCALID_SPOOK_HOUSE_TWIN1)
    setobjecthidden(LOCALID_SPOOK_HOUSE_TWIN2)
    setvar(VAR_SPOOKY_HOUSE_STATE, 3)
    fadescreen(FADE_FROM_BLACK)
    release
}

