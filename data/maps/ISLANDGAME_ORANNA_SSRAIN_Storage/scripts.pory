mapscripts ISLANDGAME_ORANNA_SSRAIN_Storage_MapScripts {}

script ISLANDGAME_ORANNA_SSRAIN_Storage_Rotom {
    lock 
    faceplayer
    setflag(FLAG_SMART_WILD_AI)
    createmon(B_SIDE_OPPONENT, B_FLANK_LEFT, SPECIES_ROTOM, 25, 0, NUM_NATURES, 0, MON_GENDERLESS, 0, 0, 0, 0, 0, 0, 0)
    playmoncry(SPECIES_ROTOM, CRY_MODE_ENCOUNTER)
    waitmoncry
    setflag(FLAG_SYS_CTRL_OBJ_DELETE)
    dowildbattle
    clearflag(FLAG_SMART_WILD_AI)
    specialvar(VAR_RESULT, GetBattleOutcome)
        
    switch(var(VAR_RESULT)) {
        case B_OUTCOME_LOST:
            break
        case B_OUTCOME_RAN:
            break
        case B_OUTCOME_WON:
            goto(Common_EventScript_RemoveStaticPokemon)
        case B_OUTCOME_CAUGHT:
            setflag(FLAG_ORANNA_SSRAIN_ROTOM_DEFEATED)
            goto(Common_EventScript_RemoveStaticPokemon)
        default:
            setflag(FLAG_ORANNA_SSRAIN_ROTOM_DEFEATED)
            goto(Common_EventScript_RemoveStaticPokemon)
    }
    release
}