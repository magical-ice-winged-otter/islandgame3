script ISLANDGAME_MINTY_MEADOWS_Trainer_LowerDoubleLovers {
    trainerbattle_double(TRAINER_MINTY_MEADOWS_1, format("Oi! You're ruining our romantic excursion!"), format("Lizzy: Ugh! Worst date ever!\pOwen: W-Wait! Don't leave!"), format("Go away! We're having a touching moment!"))
	msgbox(format("Ugh, now we have to take our Pokémon to Nurse Joy.\pThanks a lot."), MSGBOX_AUTOCLOSE)
}

script ISLANDGAME_MINTY_MEADOWS_Trainer_LowerJogger {
