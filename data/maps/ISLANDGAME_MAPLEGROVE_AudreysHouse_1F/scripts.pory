mapscripts ISLANDGAME_MAPLEGROVE_AudreysHouse_1F_MapScripts {
    MAP_SCRIPT_ON_TRANSITION {
        if (gettimeofday == TIME_NIGHT) {
            setobjecthidden(LOCALID_LITTLE_SISTER)
            setobjecthidden(LOCALID_BUNEARY)
        }
    }
}

